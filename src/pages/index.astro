---
import "../styles/global.css";
import ThreeScene from "../components/ThreeScene.astro";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Portfolio</title>
  </head>
  <body class="bg-gray-900 text-white">
    <ThreeScene />
    <main class="relative z-10 min-h-screen flex flex-col items-center justify-center">
      <section class="text-center px-4 py-16">
        <h1 class="text-5xl font-bold text-white">Paul J Ebreo</h1>
        <p class="mt-4 text-lg text-white">I'm a Developer passionate about 3D & Web Tech</p>
      </section>
      <section class="mt-16 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 px-8">
        <div class="bg-gray-800 p-6 rounded-xl shadow-lg">
          <h2 class="text-xl font-semibold text-white">Project 1</h2>
          <p class="text-white">Description of the project.</p>
        </div>
        <div class="bg-gray-800 p-6 rounded-xl shadow-lg">
          <h2 class="text-xl font-semibold text-white">Project 2</h2>
          <p class="text-white">Description of the project.</p>
        </div>
        <div class="bg-gray-800 p-6 rounded-xl shadow-lg">
          <h2 class="text-xl font-semibold text-white">Project 3</h2>
          <p class="text-white">Description of the project.</p>
        </div>
      </section>
      <footer class="mt-16 text-center text-white">
        <p>&copy; 2025 My Portfolio | Built with Astro, Three.js, and TailwindCSS</p>
      </footer>
    </main>
  </body>
</html>
